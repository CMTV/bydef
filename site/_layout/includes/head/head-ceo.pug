title #{head.title}

meta(name="description", content=head.description)
meta(name="generator", content="Static Site Generator \"ByDef\"")

if head.keywords
    meta(name="keywords", content=head.keywords.join(', '))

link(rel="canonical", href=head.canonicalUrl)

//- Open Graph
    
meta(name="og:title", content=head.title)
meta(name="og:description", content=head.description)

if head.ogType
    meta(name="og:type", content=head.ogType)

if head.ogImage
    meta(name="og:image", content=head.ogImage)

meta(name="og:url", content=head.canonicalUrl)
meta(name="og:site_name", content="ByDef")